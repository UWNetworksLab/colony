{
  "name": "colony-chrome-app",
  "description": "Chrome app version of Colony",
  "version": "0.1",
  "manifest_version": 2,
  "sockets": {
    "udp": {
        "send": "*",
        "bind": "*"
    }
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "http://*/",
    "system.network",
    "identity",
    "storage"
  ]
}
