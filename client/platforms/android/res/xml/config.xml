<?xml version='1.0' encoding='utf-8'?>
<widget id="org.uproxy.colony" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="OAuthRedirect">
        <param name="android-package" value="org.apache.cordova.oauthredirect.OAuthRedirect" />
        <param name="onload" value="true" />
    </feature>
    <feature name="OpenVPN">
        <param name="android-package" value="org.apache.cordova.openvpn.OpenVPN" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Ssh">
        <param name="android-package" value="org.apache.cordova.ssh.Ssh" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <name>Colony</name>
    <description>
        Deploy your own proxy/VPN
    </description>
    <author email="info@uproxy.org" href="https://www.uproxy.org">
      uProxy
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
